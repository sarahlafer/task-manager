<%= form_for(@task) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, class: 'form-control' %>
  </div>

  <div class="checkbox">
    <label>
      <%= f.check_box :completed, default: false %> Completed
    </label>
  </div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>
